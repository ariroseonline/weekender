

<div class="container-fluid">
	<h1>Weekender Jobs</h1>



	<div class="row">
			<div class="col-sm-9">
			<div class="btn-group btn-group-justified" role="group" aria-label="Justified button group with nested dropdown">
	      <a href="#"  role="button">Front-End Development</a>
	      

	      <%#= link_to "Front-End Development", "http://www.google.com" , class: "btn btn-default"  %>
	      <%= form_tag("/jobs", method: "get")  do %>
	         <%= check_box_tag 'category[]', "frontend" %>
	         <%= label_tag(:pet_dog, "Front-End Development") %>

	         <%= check_box_tag 'category[]', "backend" %>
	         <%= label_tag(:pet_dog, "Back-End Development") %>

	        <%= check_box_tag 'category[]', "ui" %>
	        <%= label_tag(:pet_dog, "UI Design") %>

	        <%= check_box_tag 'category[]', "app" %>
	        <%= label_tag(:pet_dog, "App Development") %>

	        <%= submit_tag 'Submit' %>
	      <% end %>

	    </div>
			<table class="table table-striped">
			  <thead>
			<!--     <tr>
			      <th>#</th>
			      <th>Title</th>
			      <th></th>
			      <th></th>
			    </tr> -->
			  </thead>

				
			  <tbody>
			    <% @jobs.each do |job| %>
			    <tr>
			      <th scope="row">1</th>
			      <td><h3><%=job.title %></h3></td>
			      <td><p><%=job.description %></p></td>
			      <td><h5><%= link_to "Edit Posting", edit_job_path(job)%></h5></td>
			    	<td><h5><%= link_to 'Delete Posting', job, method: :delete %></h5></td>
			    	<td>New York City</td>
			    	<td>Flex</td>
			    </tr>
			    <% end %>
			   
			  </tbody>
			</table>
		</div>

		<div class="col-sm-3">
			<button>Post a Job</button>
		</div>
		
	</div>
</div>
