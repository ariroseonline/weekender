<h1>Add a Job</h1>

<%= form_for @job do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, size: '60x6' %>
  </div>

  <div>
    <%= select_tag(:category_id, options_for_select(@categories)) %>
    <%= f.text_area :category_id %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>